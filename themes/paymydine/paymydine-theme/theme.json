{
    "code": "paymydine",
    "name": "PayMyDine Frontend",
    "description": "Modern Next.js frontend for PayMyDine restaurant ordering system",
    "version": "1.0.0",
    "author": "PayMyDine Team",
    "tags": ["restaurant", "ordering", "nextjs", "modern"],
    "require": {
        "igniter": ">=4.0.0"
    },
    "form": {
        "fields": {
            "api_base_url": {
                "label": "API Base URL",
                "type": "text",
                "default": "/api",
                "comment": "Base URL for API endpoints"
            },
            "primary_color": {
                "label": "Primary Color",
                "type": "colorpicker",
                "default": "#FF6B35",
                "comment": "Primary brand color"
            },
            "secondary_color": {
                "label": "Secondary Color", 
                "type": "colorpicker",
                "default": "#2D3748",
                "comment": "Secondary brand color"
            },
            "enable_dark_mode": {
                "label": "Enable Dark Mode",
                "type": "switch",
                "default": false,
                "comment": "Allow users to switch to dark mode"
            }
        }
    }
} 